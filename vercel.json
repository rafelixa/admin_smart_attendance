{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "^/$",
      "dest": "/frontend/index.html"
    },
    {
      "src": "^/login$",
      "dest": "/frontend/src/pages/login/index.html"
    },
    {
      "src": "^/camera$",
      "dest": "/frontend/src/pages/camera/index.html"
    },
    {
      "src": "^/request-list$",
      "dest": "/frontend/src/pages/request_list/index.html"
    },
    {
      "src": "^/userlist$",
      "dest": "/frontend/src/pages/userlist/index.html"
    },
    {
      "src": "^/userlist-manage$",
      "dest": "/frontend/src/pages/userlist_manage/index.html"
    },
    {
      "src": "^/request-list-manage/approved$",
      "dest": "/frontend/src/pages/request_list_manage/approved/index.html"
    },
    {
      "src": "^/request-list-manage/pending$",
      "dest": "/frontend/src/pages/request_list_manage/pending/index.html"
    },
    {
      "src": "^/request-list-manage/rejected$",
      "dest": "/frontend/src/pages/request_list_manage/rejected/index.html"
    },
    {
      "src": "/public/(.*)",
      "dest": "/frontend/public/$1"
    },
    {
      "src": "/src/(.*)",
      "dest": "/frontend/src/$1"
    },
    {
      "src": "/(.*\\.(js|css|map|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}