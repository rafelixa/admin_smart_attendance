{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/login$",
      "dest": "/src/pages/login/index.html"
    },
    {
      "src": "^/camera$",
      "dest": "/src/pages/camera/index.html"
    },
    {
      "src": "^/request-list$",
      "dest": "/src/pages/request_list/index.html"
    },
    {
      "src": "^/userlist$",
      "dest": "/src/pages/userlist/index.html"
    },
    {
      "src": "^/userlist-manage$",
      "dest": "/src/pages/userlist_manage/index.html"
    },
    {
      "src": "^/request-list-manage/approved$",
      "dest": "/src/pages/request_list_manage/approved/index.html"
    },
    {
      "src": "^/request-list-manage/pending$",
      "dest": "/src/pages/request_list_manage/pending/index.html"
    },
    {
      "src": "^/request-list-manage/rejected$",
      "dest": "/src/pages/request_list_manage/rejected/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*\\.(js|css|map|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}